<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="LogService">
        <host>  
          <baseAddresses>  
            <add baseAddress="http://localhost:8080/LogService"/>
          </baseAddresses>  
        </host> 
        <endpoint address=""
                  binding="wsHttpBinding"
                  contract="SimpleCentralLog.ILogService"
                  behaviorConfiguration="webHttp" />
      </service>
    </services>
    <behaviors>
      <endpointBehaviors>
        <behavior name="webHttp">
            <webHttp/>
        </behavior>
      </endpointBehaviors>
     </behaviors>
  </system.serviceModel>

</configuration>
